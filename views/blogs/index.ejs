<!DOCTYPE html>
<html lang="en">
  <!--header partial template-->
  <%-include('../partials/head.ejs') %>
  <body>
    <!--Navbar partial template-->
    <%-include('../partials/nav.ejs') %>

    <div class="content blogs">
      <h2>All blogs</h2>
      <% if(blogs.length>0){%> <% blogs.forEach(blog=>{ %>
      <a class="single_blog" href="/blogs/<%= blog._id %>">
        <h4 class="blog_title"><%= blog.title %></h4>
        <p class="blog_snippet"><%= blog.snippet %></p>
      </a>
      <% })%> <% }else{ %>
      <p>there is no blog to post</p>
      <%}%>
    </div>
    <!--footer partial template-->
    <%-include('../partials/footer.ejs') %>
  </body>
</html>
